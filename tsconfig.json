{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "rootDir": "./",
    "outDir": "./dist",
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ]
}
